@model Category

@{
    ViewData["Title"] = "Delete";
}




<div class="contents" style="
    padding-left: 10px;
">


    <div class="new-ticket mt-1">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

                    <div class="breadcrumb-main">
                        <h4 class="text-capitalize breadcrumb-title">Delete Category</h4>
                        <div class="breadcrumb-action justify-content-center flex-wrap">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard"><i class="uil uil-estate"></i>Dashboard</a></li>
                                    <li class="breadcrumb-item"><a asp-action="Help" asp-area="" asp-controller="Profile">Support</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Delete - @Model.categoryName</li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row justify-content-center mb-50 mt-sm-25">
                <div class="col-lg-8 col-sm-8">
                    <div class="ticket_modal">
                        <div class="ticket_modal-modal">
                            <h1>
                                <i></i>
                                Delete Category
                            </h1>
                            <form method="post" asp-action="Delete">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <label>Category Name </label>
                                    <input type="text" class="form-control"asp-for="categoryName">
                                    <span asp-validation-for="categoryName" class="text-danger"></span>

                                </div>
                                
                                <div class="button-group d-flex pt-16">
                                    <button class="btn btn-primary btn-default btn-squared " type="submit" >Delete</button>
                                    <a class="btn btn-primary btn-default btn-squared btn-transparent-primary " asp-action="Index" asp-controller="Dashboard"> DashBoard</a><i></i>
                                    <a class="btn btn-primary btn-default btn-squared btn-transparent-primary " asp-action="Index">Cancel</a>                 

                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- ends: .row -->
        </div>
    </div>

</div>